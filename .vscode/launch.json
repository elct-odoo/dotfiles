{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run Odoo",
            "type": "debugpy",
            "request": "launch",
            "args": [
                "start",
                "${input:get_db}",
                "--vscode",
                // "--python",
                // "/home/odoo/.venvs/shitshow/bin/python",
                "--dev=xml,qweb",
            ],
            "program": "/home/odoo/dev/support/support-tools/oe-support.py",
            "console": "integratedTerminal"
        },
        {
            "name": "Upgrade Odoo",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/.vscode/upgrade_wrapper.py",
            "args": [
                "${input:get_db}",
                "${input:upgradeVersion}"
            ],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "justMyCode": true
        },
        {
            "name": "odoo-bin test file",
            "type": "debugpy",
            "request": "launch",
            "python": "/home/odoo/.venvs/18.0/bin/python",
            "args": [
                "-d",
                "oes_test",
                "--test-file=/home/odoo/dev/src/enterprise/mrp_plm/tests/test_mrp_plm.py",
                "--log-level=test",
                "--addons-path=./enterprise,./design-themes,odoo/addons",
                "--stop-after-init",
                "-p",
                "8569"
            ],
            "program": "/home/odoo/dev/src/odoo/odoo-bin",
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "name": "odoo-bin test tag",
            "type": "debugpy",
            "request": "launch",
            "args": [
                "-d",
                "oes_testing_tag",
                "-i",
                "documents,documents_spreadsheet",
                "--test-tags=/documents_spreadsheet:SpreadsheetDocuments.test_autovacuum_preserve_spreadsheet_with_attachment",
                "--log-level=test",
                "--addons-path=./enterprise,./design-themes,odoo/addons",
                "--stop-after-init"
            ],
            "program": "/home/odoo/dev/src/odoo/odoo-bin",
            "console": "integratedTerminal",
            "justMyCode": false
        },
        {
            "name": "odoo-bin test module",
            "type": "debugpy",
            "request": "launch",
            "args": [
                "-i",
                "documents",
                "-d",
                "oes_testing",
                "--log-level=test",
                "--test-enable",
                "--addons-path=./enterprise,./design-themes,odoo/addons",
                "--stop-after-init"
            ],
            "program": "/home/odoo/dev/src/odoo/odoo-bin",
            "console": "integratedTerminal",
            "justMyCode": false
        }
    ],
    "inputs": [
        {
            "id": "get_db",
            "type": "command",
            "command": "shellCommand.execute",
            "args": {
                "command": "${workspaceFolder}/.vscode/get_dbs.py",
                "useSingleResult": false
            },
        },
        {
            "id": "upgradeVersion",
            "type": "pickString",
            "options": [
                "19.0",
                "saas-18.4",
                "saas-18.3",
                "saas-18.2",
                "18.0",
                "17.0",
                "16.0",
                "15.0",
            ],
            "description": "Choose the target version for the upgrade"
        }
    ]
}