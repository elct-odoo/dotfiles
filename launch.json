{
    "version": "0.2.0",
    "configurations": [
        {
         "name": "Run Odoo",
            "type": "debugpy",
            "request": "launch",
            "args": [
                "start",
                "${input:dbName}",
                "--vscode",
                // "--python",
                // "/home/odoo/.venvs/shitshow/bin/python",
                "--dev=xml,qweb",
            ],
            "program": "/home/odoo/dev/support/support-tools/oe-support.py",
            "console": "integratedTerminal"
        },
        {
            "name": "odoo-bin test file",
            "type": "debugpy",
            "request": "launch",
            "python": "/home/odoo/.venvs/18.0/bin/python",
            "args": [
                "-d",
                "oes_test",
                // "-i",
                // "mrp_plm",
                "--test-file=/home/odoo/dev/src/enterprise/mrp_plm/tests/test_mrp_plm.py",
                "--log-level=test",
                "--addons-path=./enterprise,./design-themes,odoo/addons",
                "--stop-after-init",
                "-p",
                "8569"
            ],
            "program": "/home/odoo/dev/src/odoo/odoo-bin",
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "name": "odoo-bin test tag",
            "type": "debugpy",
            "request": "launch",
            "args": [
                "-d",
                "oes_testing_tag",
                "-i",
                "documents,documents_spreadsheet",
                "--test-tags=/documents_spreadsheet:SpreadsheetDocuments.test_autovacuum_preserve_spreadsheet_with_attachment",
                "--log-level=test", 
                "--addons-path=./enterprise,./design-themes,odoo/addons",
                "--stop-after-init"
            ],
            "program": "/home/odoo/dev/src/odoo/odoo-bin",
            "console": "integratedTerminal",
            "justMyCode": false
        },
        {
            "name": "odoo-bin test module",
            "type": "debugpy",
            "request": "launch",
            "args": [
                "-i",
                "documents",
                "-d",
                "oes_testing",
                "--log-level=test",
                "--test-enable",
                "--addons-path=./enterprise,./design-themes,odoo/addons",
                "--stop-after-init"
            ],
            "program": "/home/odoo/dev/src/odoo/odoo-bin",
            "console": "integratedTerminal",
            "justMyCode": false
        },
            
        {
            "name": "Upgrade",
            "type": "debugpy",
            "request": "launch",
            "program": "/home/odoo/dev/src/odoo/odoo-bin",
            "args": [
                "-d", "oes_upgrade",
                "--addons-path=/home/odoo/dev/src/odoo/addons,/home/odoo/dev/src/enterprise",
                "-u", "all",
                "--stop-after-init",
                "--upgrade-path=/home/odoo/dev/src/upgrade-util/src,/home/odoo/dev/src/upgrade/migrations"
            ],
            "console": "integratedTerminal",
            "cwd": "/home/odoo/dev/src/odoo"
        }
    ],
    "inputs": [
        {
            "id": "dbName",
            "type": "command",
            "command": "shellCommand.execute",
            "args": {
                "command": "${workspaceFolder}/.vscode/getDBS.py",
                "useSingleResult": false
            }
        }

        
    ]
}